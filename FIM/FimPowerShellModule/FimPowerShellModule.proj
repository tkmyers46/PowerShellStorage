<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  
  <!-- 
  *********************************************************************************************
  Deployment scripts
  *********************************************************************************************

  This project binplace the powershell deployment scripts *.ps1 to the target location

  *********************************************************************************************
  -->
  
  <!--
  ***********************************************************************
  Binplace
  ***********************************************************************
  -->  
  <ItemGroup>
    <FilesToBinPlace Include="FimPowerShellModule.psm1" /> 
  </ItemGroup>

  <!--
    ***********************************************************************
    Targets
    ***********************************************************************
    -->
  <Target Name="CopyFiles"
        Condition="'@(FilesToBinPlace)' != ''">
    <Copy SourceFiles="@(FilesToBinPlace)"
          DestinationFolder="$(OutDir)$(DestinationSubfolder)"
          SkipUnchangedFiles="true"/>
  </Target>

</Project>